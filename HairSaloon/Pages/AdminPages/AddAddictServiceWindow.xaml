<Window x:Class="HairSaloon.Pages.AdminPages.AddAddictServiceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HairSaloon.Pages.AdminPages"
        mc:Ignorable="d"
            Title="Новая дополнительная услуга" SizeToContent="WidthAndHeight" MinWidth="300">
    <Grid>
        <TextBlock Text="Добавление дополнительной слуги" HorizontalAlignment="Center" FontSize="14" FontWeight="Bold"/>
        <StackPanel Margin="10 20 10 10">
            <TextBlock>Название</TextBlock>
            <TextBox Text="{Binding Title}" />
            <DockPanel Margin="0 10 0 0" LastChildFill="True" VerticalAlignment="Bottom">

                <UniformGrid Columns="2">

                    <Button IsDefault="True" Content="Сохранить"  Margin="0 0 10 0" Click="Accept_Click"/>
                    <Button IsCancel="True" Content="Отмена"  />
                </UniformGrid>
            </DockPanel>

        </StackPanel>
    </Grid>
</Window>
