<Window x:Class="HairSaloon.Pages.HumanPages.HumanMainMenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HairSaloon.Pages.HumanPages"
        mc:Ignorable="d"
        Title="HumanMainMenuWindow" Height="300" Width="350">
    <Grid Margin="20">
        <TextBlock x:Name="welcome" 
               Text="Добро пожаловать!" 
               FontWeight="Bold" 
               HorizontalAlignment="Center"/>

        <UniformGrid Rows="4" Margin="0 20 0 0">
            

            <Button x:Name="ServiceButton" 
    FontWeight="Bold"
    Content="Услуги"
    Margin="5"
            Click="Service_Click"/>

            <Button x:Name="AddictServiceButton" 
FontWeight="Bold"
Content="Дополнительные услуги"
Margin="5"
        Click="AddictService_Click"/>

            <Button x:Name="OrderButton" 
    FontWeight="Bold"
    Content="Мои записи"
    Margin="5"
            Click="Order_Click"/>

            <Button x:Name="BackButton" 
FontWeight="Bold"
Content="Выход"
Margin="5"
        Click="Back_Click"/>
        </UniformGrid>
    </Grid>
</Window>
