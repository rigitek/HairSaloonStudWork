<Window x:Class="HairSaloon.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HairSaloon"
        mc:Ignorable="d"
        Title="Авторизация" SizeToContent="WidthAndHeight" MinWidth="300">
    <Grid Margin="20">

        <UniformGrid Rows="5" VerticalAlignment="Center">
            <TextBlock Text="Логин (admin)"  FontWeight="Bold"/>
            <TextBox x:Name="Login" Margin="0 0 0 5"/>
            <TextBlock Text="Пароль (admin)"  FontWeight="Bold"/>
            <PasswordBox x:Name="Password" Margin="0 0 0 5"/>

            <Button x:Name="HumanButton" 
            FontWeight="Bold"
            Content="Авторизоваться"
            
                    Height="25"
            Click="Login_Click"/>

        </UniformGrid>
    </Grid>
</Window>
